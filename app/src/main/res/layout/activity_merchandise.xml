<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Merchandise">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">





        <EditText
            android:id="@+id/name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_phone_no"
            android:inputType="text"
            android:autofillHints="Enter Name"
            tools:targetApi="o" />

        <TextView
            style="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
            android:text="@string/your_dancevarsity_tshirt_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/name_t_shirt_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:text="@string/trade_marked"
            android:textSize="16sp"
            android:paddingStart="24dp" />

        <CheckBox
            android:id="@+id/name_marked_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:text="@string/plain_q"
            android:textSize="16sp" />


        <TextView
            style="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Header"
            android:text="@string/quantity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:onClick="decrement"
                android:text="@string/sub" />

            <TextView
                android:id="@+id/quantity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/_0"
                android:textColor="@android:color/black"
                android:textSize="16sp" />


            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:onClick="increment"
                android:text="@string/adding" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="submitOrder"
            android:text="@string/order" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="@string/we_offer_a_variety_of_artistic_services_in_events_clubs_and_other_entertainment_fields_book_dancers_dj_s_below" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/artist_bookings"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/merch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stwoa"
            android:adjustViewBounds="true"
            android:contentDescription="@string/todo_merch"
            tools:ignore="UnusedIds" />
        <TextView
            style="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
            android:text="@string/we_also_sell_plain_cloth_and_other_fashionable_merchandise_like_shoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/merch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sua"
            android:adjustViewBounds="true"
            android:contentDescription="@string/todo2" />
        <TextView
            style="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
            android:text="@string/email_us_your_preferred_designs_for_custom_made_cloths_at_souniquedancevarsity_gmail_com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/merch3"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/firsta"
            android:adjustViewBounds="true"
            android:contentDescription="@string/todo1" />


    </LinearLayout>


</ScrollView>